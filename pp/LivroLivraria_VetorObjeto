package appparimpar;

import java.util.Scanner;

/**
 *
 * @author Matheus
 */
public class AppParImpar {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner entrada = new Scanner(System.in);
        Scanner ler = new Scanner(System.in);
        
        LivroLivraria listaLivros[] = new LivroLivraria[2];
        LivroLivraria livro;
        int QtdRomance = 0, QtdPreco = 0, PrecoTotal = 0;
        
        String nome, autor, genero;
        int isbn;
        double preco;
        
        
        for (int i = 0; i < listaLivros.length; i++) {
            
            System.out.println("Digite o nome do "+(i+1)+"º livro: ");
            nome = entrada.nextLine();
            
            System.out.println("Digite o nome do autor: ");
            autor = entrada.nextLine();
            
            System.out.println("Digite o genero do livro: ");
            genero = entrada.nextLine();
            
            System.out.println("Digite o preço: ");
            preco = ler.nextDouble();
            
            System.out.println("Digite o ISBN");
            isbn = ler.nextInt();
            
            livro = new LivroLivraria(nome, autor, genero, preco, isbn);
            listaLivros[i] = livro;
        }
        
        for (LivroLivraria livros : listaLivros) {
            
            if (livros.genero.equalsIgnoreCase("romance")) {
                
                QtdRomance ++;
            }
            
            if (livros.preco > 10.0     &&     livros.preco < 50.0 ) {
                
                QtdPreco ++;
                
            }
            
            PrecoTotal += livros.preco;
        }
        
        System.out.println("Quantidade livros de Romance: "+QtdRomance);
        System.out.println("Quantidade de livros com preço entre R$10 e R$50: "+QtdPreco);
        System.out.println("Valor total do acervo : "+PrecoTotal);
    }
    
}









/*
 * To change this license header, choose License Headers in Project Properties.
 * To change this template file, choose Tools | Templates
 * and open the template in the editor.
