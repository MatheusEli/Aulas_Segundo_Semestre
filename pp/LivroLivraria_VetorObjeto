package appparimpar;

/**
 *
 * @author Matheus
 */
public class LivroLivraria {
    
    String nome;
    String autor;
    String genero;
    double preco;
    int isbn;

    public LivroLivraria(String nome,String autor,String genero,double preco,int isbn) {
        
        this.autor = autor;
        this.genero = genero;
        this.nome = nome;
        this.preco = preco;
        this.isbn = isbn;
    }

    public String getAutor() {
        return autor;
    }

    public String getGenero() {
        return genero;
    }

    public int getIsbn() {
        return isbn;
    }

    public String getNome() {
        return nome;
    }

    public double getPreco() {
        return preco;
    }

    public void setAutor(String autor) {
        this.autor = autor;
    }

    public void setGenero(String genero) {
        this.genero = genero;
    }

    public void setIsbn(int isbn) {
        this.isbn = isbn;
    }

    public void setNome(String nome) {
        this.nome = nome;
    }

    public void setPreco(double preco) {
        this.preco = preco;
    }
    
}
