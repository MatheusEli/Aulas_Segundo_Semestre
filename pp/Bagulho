package applivrolivraria;

import java.util.Scanner;

/**
 *
 * @author lab804
 */
public class AppLivroLivraria {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
        Scanner entrada = new Scanner(System.in);        
        LivroLivraria livros[] = new LivroLivraria[5];
        LivroLivraria livro;
        
        String titulo;
        String genero;
        String autor;
        double preco;
        int isbn;
        
        for (int i = 0; i < livros.length; i++) {
         
            System.out.println("Digite o nome do "+(1+i)+"º livro:");
            titulo = entrada.nextLine();
            
            System.out.println("Digite o genero do "+(1+i)+"º livro: ");
            genero = entrada.nextLine();
            
            System.out.println("Digite o nome do autor do "+(1+i)+"º livro: ");
            autor = entrada.nextLine();
            
            System.out.println("digite o preço do "+(1+i)+"º livro: ");
            preco = entrada.nextDouble();
            
            System.out.println("Digite o isbn do "+(1+i)+"º livro: ");
            isbn = entrada.nextInt();
            
            livro = new LivroLivraria(titulo, autor, genero, preco, isbn);
            
            livros[i] = livro;
        }
        
        for (int i = 0; i < livros.length; i++) {
            
            
        }
        
    }
    
}














package applivrolivraria;

/**
 *
 * @author lab804
 */
public class LivroLivraria {
    
    String titulo;
    String genero;
    String autor;
    double preco;
    int isbn;
 
    public LivroLivraria(String autor, String genero, String titulo, double preco, int isbn){
    
        this.titulo = titulo;
        this.autor = autor;
        this.genero = genero;
        this.preco = preco;
        this.isbn = isbn;
        
        
    }
    
    
    
}
